{
  "name": "llm-proxy",
  "description": "A serverless proxy on Cloudflare Workers for multiple LLM APIs with unified authentication and key rotation.",
  "author": "blue.pen5805",
  "version": "0.2.1",
  "private": true,
  "type": "module",
  "scripts": {
    "deploy": "wrangler deploy",
    "dev": "ts-node scripts/with-secrets.ts --env develop -- wrangler dev --env-file .dev.vars.develop",
    "cf-typegen": "ts-node scripts/with-secrets.ts --env example -- wrangler types --env-file .dev.vars.example",
    "cf:login": "wrangler login",
    "cf:logout": "wrangler logout",
    "test": "vitest run",
    "test-watch": "vitest watch",
    "tsc": "tsc --noEmit",
    "prettier": "prettier --write .",
    "prettier-ci": "prettier --check .",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint --fix 'src/**/*.ts'",
    "secrets:deploy": "ts-node scripts/deploy-secrets.ts",
    "secrets:create": "ts-node scripts/create-config.ts"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.12.14",
    "@trivago/prettier-plugin-sort-imports": "^6.0.2",
    "@types/node": "^25.3.0",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "prettier": "^3.8.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.0",
    "vite": "^7.3.1",
    "vitest": "^3.2.4",
    "wrangler": "^4.67.0"
  },
  "cloudflare": {
    "bindings": {
      "PROXY_API_KEY": {
        "description": "API key to authenticate requests to the LLM Proxy server. (Any string can be used)"
      },
      "OPENAI_API_KEY": {
        "description": "Your OpenAI API key."
      },
      "GEMINI_API_KEY": {
        "description": "Your Google AI Studio (Gemini) API key."
      }
    }
  }
}
